<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="clicker.controller.TaskController">
    <Label fx:id="userLabel" text="User: Unknown" layoutX="20.0" layoutY="20.0"
           style="-fx-font-size: 16; -fx-font-weight: bold;" />

    <Label fx:id="timerLabel" text="Time: 0:00" layoutX="400.0" layoutY="20.0"
           style="-fx-font-size: 16;" />

    <VBox alignment="CENTER" layoutX="150.0" layoutY="100.0" spacing="20.0" prefWidth="300.0">
        <Button fx:id="clickButton" text="CLICK" prefWidth="200.0" prefHeight="50.0"
                style="-fx-font-size: 18; -fx-background-color: #d3d3d3;"
                onAction="#handleClick" />
        <Label fx:id="clickCountLabel" text="Click count: 0" style="-fx-font-size: 16;" />
    </VBox>

    <Button fx:id="exitButton" text="Exit" layoutX="250.0" layoutY="300.0" prefWidth="100.0"
            prefHeight="30.0" style="-fx-font-size: 14;" onAction="#handleExit" />
</AnchorPane>
