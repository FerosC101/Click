<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="clicker.controller.AdminController">
    <stylesheets>
        <URL value="@/styles/style.css"/>
    </stylesheets>
    <VBox spacing="20" alignment="CENTER" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <Label text="Admin Login" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Username"/>
            <TextField fx:id="usernameField" promptText="Enter admin username" prefWidth="300"/>
            <Label text="Password"/>
            <PasswordField fx:id="passwordField" promptText="Enter admin password" prefWidth="300"/>
        </VBox>
        <Button fx:id="loginButton" text="Login" onAction="#handleLogin" style="-fx-font-size: 14px;"/>
        <Hyperlink fx:id="returnlink" text="Back to Home" onAction="#returnToHome"/>
    </VBox>
</AnchorPane>
