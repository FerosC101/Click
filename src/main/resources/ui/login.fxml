<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="clicker.controller.AuthController">
    <stylesheets>
        <URL value="@/styles/style.css"/>
    </stylesheets>
    <children>
        <VBox spacing="20" alignment="CENTER" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <Label text="Click Task" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <VBox spacing="10" alignment="CENTER">
                <Label text="Username"/>
                <TextField fx:id="usernameField" promptText="Enter your username" prefWidth="300"/>
                <Label text="Password"/>
                <PasswordField fx:id="passwordField" promptText="Enter your password" prefWidth="300"/>
            </VBox>
            <Button text="Login" onAction="#handleLogin" style="-fx-font-size: 14px;"/>
            <HBox spacing="5" alignment="CENTER">
                <Label text="Don't have an account?"/>
                <Hyperlink text="Sign up" onAction="#openSignUp"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
